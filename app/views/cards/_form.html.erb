<%= simple_form_for(@card, html:{class:"form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name %>
    <%= f.input :description, as: :text, input_html: {rows: "3"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
